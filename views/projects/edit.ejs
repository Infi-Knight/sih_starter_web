<% include ../partials/header %>

<div class="container">
    <h1 style="text-align : center;">Edit <%= project.name %></h1>

        <div style="width : 30%; margin: 25px auto;">
            <form action="/projects/<%=project._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="project[title]" value="<%=project.title%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="project[image_url]" value="<%= project.image_url %>" />
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="project[description]" value="<%=project.description%>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
             </form>
            <a href="/projects/<%=project._id%>">Go Back</a>
         </div>

</div>

<% include ../partials/footer %>