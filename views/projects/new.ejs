<% include ../partials/header %>

<div class="container" id="project-form">
    <h1 style="text-align : center;">Add A New Project</h1>

        <div style="width : 30%; margin: 25px auto;">
            <form action="/projects" method="POST">
                <div class="form-group">
                    <span class="label label-default">Title :</span><br><br><input class="form-control" type="text" name="title" placeholder="Title" required />
                </div>
                <div class="form-group">
                    <span class="label label-default">Ministry :</span><br><br>
                    <select name="ministry">
                        <option></option>
                        <option>Ministry of Development of North Eastern Region</option>
                        <option>Ministry of Railways</option>
                        <option>Ministry of Housing and Urban Poverty Alleviation</option>
                        <option>Ministry of Road Transport and Highways</option>
                        <option>Ministry of Women and Child Development</option>
                        <option>Ministry of Youth Affairs and Sports</option>
                        <option>Ministry of Power</option>
                    </select>
                </div>
                <div class="form-group">
                    <span class="label label-default">Image : </span><br><br><input  type="file" name="image_file" accept="*/image">
                </div>
                <div class="form-group">
                    <span>Or, paste URL :  </span>    <input type="text" name="image_url" placeholder="URL" required >
                </div>
                <div class="form-group">
                    <span class="label label-default">Head :</span><br><br><input class="form-control" type="text" name="head" placeholder="Headed By">
                </div>
                 <div class="form-group">
                    <span class="label label-default">Sanctioned Budget :</span><br><br><input class="form-control" type="text" name="budget" placeholder="Budget" required >
                </div>
                <div class="form-group">
                    <span class="label label-default">Start Date:</span>
                    <input type="date" name="start_date" required >
                </div>
                <div class="form-group">
                    <span class="label label-default">Completion Date:</span>
                    <input type="date" name="end_date" required >
                </div>
                <div class="form-group">
                    <textarea name="description" placeholder="Description" style="width:100%; height:80px" required ></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
             </form>
            <a href="/show">Go Back</a>
         </div>

</div>

<% include ../partials/footer %>